@model Produit
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger"> are u sure, to delete this prod?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" hidden class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" hidden class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CreateDat"></label>
            <input asp-for="CreateDat" hidden class="form-control" />

        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Produit" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>


    </div>
</form>

